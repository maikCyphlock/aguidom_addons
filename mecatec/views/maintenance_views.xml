<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Maintenance Request list View -->
    <record id="hr_equipment_request_view_list_mecatec" model="ir.ui.view">
        <field name="name">maintenance.request.list.mecatec</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="client_id" string="Cliente" domain="[('is_mecatec_client', '=', True)]"/>
                <field name="vehicle_id" string="Vehículo"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Maintenance Request Form View -->
    <record id="hr_equipment_request_view_form_mecatec" model="ir.ui.view">
        <field name="name">maintenance.request.form.mecatec</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='maintenance_team_id']" position="after">
                <field name="client_id" string="Cliente" domain="[('is_mecatec_client', '=', True)]"/>
                <field name="vehicle_id" string="Vehículo"/>
            </xpath>
        </field>
    </record>

    <record id="action_mecatec_maintenance" model="ir.actions.act_window">
        <field name="name">Mantenimiento</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
