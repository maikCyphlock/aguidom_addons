<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_mecatec" model="ir.module.category">
            <field name="name">Mecatec</field>
            <field name="description">Mecatec Management Levels</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_mecatec_client" model="res.groups">
            <field name="name">Client</field>
            <field name="category_id" ref="module_category_mecatec"/>
        </record>

        <record id="group_mecatec_mechanic" model="res.groups">
            <field name="name">Mechanic</field>
            <field name="category_id" ref="module_category_mecatec"/>
        </record>

        <record id="group_mecatec_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_mecatec"/>
            <field name="implied_ids" eval="[(4, ref('group_mecatec_mechanic'))]"/>
        </record>

        <record id="group_mecatec_superuser" model="res.groups">
            <field name="name">Superuser</field>
            <field name="category_id" ref="module_category_mecatec"/>
            <field name="implied_ids" eval="[(4, ref('group_mecatec_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
