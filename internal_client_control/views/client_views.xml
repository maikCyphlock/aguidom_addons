<odoo>
    <data>
        <!-- Form View for client.instance -->
        <record id="client_instance_view_form" model="ir.ui.view">
            <field name="name">client.instance.form</field>
            <field name="model">client.instance</field>
            <field name="arch" type="xml">
                <form string="Client Instance">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="last_report" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Modules">
                                <field name="module_ids">
                                    <list editable="bottom">
                                        <field name="module_name"/>
                                        <field name="manifest_version"/>
                                        <field name="content_hash"/>
                                        <field name="git_branch"/>
                                        <field name="git_commit"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- list View for client.instance -->
        <record id="client_instance_view_list" model="ir.ui.view">
            <field name="name">client.instance.list</field>
            <field name="model">client.instance</field>
            <field name="arch" type="xml">
                <list string="Client Instances">
                    <field name="name"/>
                    <field name="last_report"/>
                </list>
            </field>
        </record>

        <!-- Action to open client.instance views -->
        <record id="action_client_instance" model="ir.actions.act_window">
            <field name="name">Client Instances</field>
            <field name="res_model">client.instance</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new client instance
                </p>
            </field>
        </record>

        <!-- Parent Menu Item -->
        <menuitem
            id="menu_internal_client_control_root"
            name="Client Control"
            sequence="10"
            web_icon="internal_client_control,static/description/icon.png"/>

        <!-- Child Menu Item linking to the action -->
        <menuitem
            id="menu_client_instances"
            name="Client Instances"
            parent="menu_internal_client_control_root"
            action="action_client_instance"
            sequence="1"/>
    </data>
</odoo>

