<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Repo List View -->
    <record id="view_telemetry_module_repo_list" model="ir.ui.view">
        <field name="name">telemetry.module.repo.list</field>
        <field name="model">telemetry.module.repo</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="github_repo"/>
                <field name="github_branch"/>
                <field name="latest_commit_hash" readonly="1"/>
                <field name="last_checked" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_telemetry_module_repo" model="ir.actions.act_window">
        <field name="name">GitHub Repositories</field>
        <field name="res_model">telemetry.module.repo</field>
        <field name="view_mode">list</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_module_repo"
              name="GitHub Repositories"
              parent="menu_internal_client_control_root"
              action="action_telemetry_module_repo"
              sequence="30"/>
</odoo>
