<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_internal_client_control" model="ir.module.category">
        <field name="name">Internal Client Control</field>
        <field name="description">Manage client instances and their module status.</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_internal_client_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_internal_client_control"/>
    </record>

    <record id="group_internal_client_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_internal_client_control"/>
        <field name="implied_ids" eval="[(4, ref('group_internal_client_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
