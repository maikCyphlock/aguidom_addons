<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_podium" model="ir.module.category">
            <field name="name">Podium Management</field>
            <field name="description">Manage Podium Clubs, Athletes and Events</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_podium_user" model="res.groups">
            <field name="name">Client (Athlete/Representative)</field>
            <field name="category_id" ref="module_category_podium"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_podium_coach" model="res.groups">
            <field name="name">Coach</field>
            <field name="category_id" ref="module_category_podium"/>
            <field name="implied_ids" eval="[(4, ref('group_podium_user'))]"/>
        </record>

        <record id="group_podium_manager" model="res.groups">
            <field name="name">Club Manager</field>
            <field name="category_id" ref="module_category_podium"/>
            <field name="implied_ids" eval="[(4, ref('group_podium_coach'))]"/>
        </record>

        <record id="group_podium_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_podium"/>
            <field name="implied_ids" eval="[(4, ref('group_podium_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
