<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_podium_athlete_form" model="ir.ui.view">
        <field name="name">podium.athlete.form</field>
        <field name="model">podium.athlete</field>
        <field name="arch" type="xml">
            <form string="Atleta">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Atleta"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="birth_date"/>
                            <field name="gender"/>
                            <field name="representative_id"/>
                            <field name="club_id"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="weight"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mensualidades">
                            <field name="payment_ids">
                                <list>
                                    <field name="date"/>
                                    <field name="month"/>
                                    <field name="year"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="InformaciÃ³n de Contacto">
                            <group>
                                <group>
                                    <field name="street"/>
                                    <field name="city"/>
                                </group>
                                <group>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_podium_athlete_tree" model="ir.ui.view">
        <field name="name">podium.athlete.tree</field>
        <field name="model">podium.athlete</field>
        <field name="arch" type="xml">
            <list string="Atletas">
                <field name="name"/>
                <field name="category_id"/>
                <field name="birth_date"/>
                <field name="gender"/>
                <field name="representative_id"/>
                <field name="club_id"/>
            </list>
        </field>
    </record>
    
    <record id="view_podium_athlete_kanban" model="ir.ui.view">
        <field name="name">podium.athlete.kanban</field>
        <field name="model">podium.athlete</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <t t-if="record.image_128.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('podium.athlete', 'image_128', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('podium.athlete', 'image_128', record.id.raw_value, placeholder)})" role="img"/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="category_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_podium_athlete" model="ir.actions.act_window">
        <field name="name">Atletas</field>
        <field name="res_model">podium.athlete</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>
