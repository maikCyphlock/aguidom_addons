<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_podium_club_form" model="ir.ui.view">
        <field name="name">podium.club.form</field>
        <field name="model">podium.club</field>
        <field name="arch" type="xml">
            <form string="Club Deportivo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_podium_club_list" model="ir.ui.view">
        <field name="name">podium.club.list</field>
        <field name="model">podium.club</field>
        <field name="arch" type="xml">
            <list string="Clubes Deportivos">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_podium_club" model="ir.actions.act_window">
        <field name="name">Clubes</field>
        <field name="res_model">podium.club</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
