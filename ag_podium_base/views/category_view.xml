<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_podium_category_form" model="ir.ui.view">
        <field name="name">podium.category.form</field>
        <field name="model">podium.category</field>
        <field name="arch" type="xml">
            <form string="Categoría">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="age_min"/>
                            <field name="age_max"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Descripción..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_podium_category_list" model="ir.ui.view">
        <field name="name">podium.category.list</field>
        <field name="model">podium.category</field>
        <field name="arch" type="xml">
            <list string="Categorías">
                <field name="name"/>
                <field name="age_min"/>
                <field name="age_max"/>
            </list>
        </field>
    </record>

    <record id="action_podium_category" model="ir.actions.act_window">
        <field name="name">Categorías</field>
        <field name="res_model">podium.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
