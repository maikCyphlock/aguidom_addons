<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_podium_payment_form" model="ir.ui.view">
        <field name="name">podium.payment.form</field>
        <field name="model">podium.payment</field>
        <field name="arch" type="xml">
            <form string="Mensualidad">
                <header>
                    <button name="action_confirm" string="Confirmar Pago" type="object" class="oe_highlight" invisible="state == 'paid'"/>
                    <button name="action_draft" string="Volver a Borrador" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="athlete_id"/>
                            <field name="date"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="month"/>
                            <field name="year"/>
                            <field name="bcv_rate"/>
                            <field name="payment_proof" filename="payment_proof_filename"/>
                            <field name="payment_proof_filename" invisible="1"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Notas adicionales..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_podium_payment_list" model="ir.ui.view">
        <field name="name">podium.payment.list</field>
        <field name="model">podium.payment</field>
        <field name="arch" type="xml">
            <list string="Mensualidades" decoration-info="state == 'draft'" decoration-success="state == 'paid'">
                <field name="date"/>
                <field name="athlete_id"/>
                <field name="month"/>
                <field name="year"/>
                <field name="amount"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'paid'"/>
            </list>
        </field>
    </record>

    <record id="view_podium_payment_search" model="ir.ui.view">
        <field name="name">podium.payment.search</field>
        <field name="model">podium.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="athlete_id"/>
                <field name="month"/>
                <field name="year"/>
                <filter string="Pagado" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Pendiente" name="draft" domain="[('state', '=', 'draft')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Mes" name="group_month" context="{'group_by': 'month'}"/>
                    <filter string="Atleta" name="group_athlete" context="{'group_by': 'athlete_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_podium_payment" model="ir.actions.act_window">
        <field name="name">Mensualidades</field>
        <field name="res_model">podium.payment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
