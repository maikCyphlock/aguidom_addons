<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_avicola_dashboard" model="ir.actions.client">
        <field name="name">Dashboard Avícola</field>
        <field name="tag">avicola_management.dashboard</field>
    </record>

    <!-- Root Menu -->
    <menuitem id="menu_avicola_root"
              name="Avícola"
              web_icon="avicola_management,static/description/icon.png"
              sequence="50"/>

    <!-- Dashboard Menu -->
    <menuitem id="menu_avicola_dashboard"
              name="Dashboard"
              parent="menu_avicola_root"
              action="action_avicola_dashboard"
              sequence="1"/>

    <!-- Operations Menu -->
    <menuitem id="menu_avicola_operations"
              name="Operaciones"
              parent="menu_avicola_root"
              sequence="10"/>

    <!-- Inventory Menu -->
    <menuitem id="menu_avicola_inventory"
              name="Inventario"
              parent="menu_avicola_root"
              sequence="20"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_avicola_config"
              name="Configuración"
              parent="menu_avicola_root"
              sequence="90"/>
</odoo>
